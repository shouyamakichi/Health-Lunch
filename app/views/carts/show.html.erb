<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<br>
<h2>カートに追加された商品</h2>
<br>
<span><%= link_to '買い物を続ける', root_path, :class => 'btn' %></span>
<br>
<br>
<table>
  <tr>
    <th></th>
    <th>商品名</th>
    <th>価格</th>
  </tr>
    <% @cart.cart_items.each do |item| %>
    <tr>
    <td text-align:center;><img height="80" src="<%=h item.protein.image %>"/></td>
    <td text-align:center;><font size="4"><%= item.protein.name %></font></td>
    <td text-align:center;><font size="4"><%= item.quantity %>個</font></td>
    <td text-align:center;><font size="4"><%= (item.total_price).to_i %>円</font></td>
    <td><%= button_to '削除', item, method: :delete, data: {confirm: 'カートから削除してよろしいですか？'}%></td>
    </tr>
     <% end %>
     <td colspan="5"><font size="5">総計：<%= (@cart.total_price).to_i %>円</font></td>
</table>
<%= button_to 'カートを空にする', @cart, method: :delete, date: {confirm: 'カートを空にしてよろしいですか？'}, class: 'fbtn' %>
