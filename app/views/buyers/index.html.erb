<%= render "shared/header" %>

<div class='buyer-contents'>
<%= image_tag @protein.image, class: 'buy-item-img' %>
<%= form_with id:'card-form', model: @buyer, url: protein_buyers_path(@protein.id), class: 'transaction-form-wrap', local: true do |f| %>
<%= render 'shared/error_messages', model: f.object %>
  <h2 class='buyer-header'>
    <span class='block-header'>購入者情報入力</span>
  </h2>
  <div class='buyer-body'>
    <div class='form-text-wrap'>
        <label class='text-form'>郵便番号</label>
        <span class='indispensable'>必須</span>
    </div>
    <%= f.text_field :zip, class:"input-default", id:"postal-code" %>
  </div>
  <div class='buyer-body'>
    <div class='form-text-wrap'>
        <label class='text-form'>都道府県</label>
        <span class='indispensable'>必須</span>
    </div>
    <%= f.text_field :region, class:"input-default", id:"region" %>
  </div>
  <div class='buyer-body'>
    <div class='form-text-wrap'>
        <label class='text-form'>市町村</label>
        <span class='indispensable'>必須</span>
    </div>
    <%= f.text_field :city, class:"input-default", id:"city"%>
  </div>
  <div class='buyer-body'>
    <div class='form-text-wrap'>
        <label class='text-form'>番地</label>
        <span class='indispensable'>必須</span>
    </div>
    <%= f.text_field :reference, class:"input-default", id:"reference"%>
  </div>
  <div class='buyer-body'>
    <div class='form-text-wrap'>
        <label class='text-form'>建物名</label>
        <span class='indispensable'>必須</span>
    </div>
   <%= f.text_field :building, class:"input-default", id:"building"%>
  </div>
  <div class='buyer-body'>
    <div class='form-text-wrap'>
        <label class='text-form'>電話番号</label>
        <span class='indispensable'>必須</span>
    </div>
   <%= f.text_field :phone_number, class:"input-default", id:"phone_number" %>
  </div>
  
    <div class='seq'>
      <span class='block-header'>カード情報</span>
      <div class='card-number'>
      <%= f.text_field :number, class:"input-default",id:"card-number", placeholder:"カード番号",maxlength:"16" %>
      </div>  
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">有効期限</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-expiration-date-wrap'>
          <%= f.text_area :exp_month, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
          <p>月</p>
          <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
          <p>年</p>
        </div>
      </div>
      <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">セキュリティコード</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_field :cvc,class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
      </div>
    </div>
  </div>
  <div class='buy-btn'>
    <%= f.submit "購入" ,class:"buy-red-btn" %>
  </div>
<% end %>
</div>
