<%= render "shared/header" %>

<div class='main-contents'>
  <div class='bento-menu'>
    <div class='main-pic'>
      <div class='pic'>
        <p class='pic-contents'>咀嚼が困難な方、歯茎で潰せるお食事</p>
      </div>
    </div>
    <div class='main-menu'>
      <div class='category-item'>
        <h2 class='title-protein'>メニュー<h2>
      </div>
      <div class='menu-category'>
        <ul class='category-menu'>
          <% @proteins.each do |protein| %>
            <li class='menu'>
              <%= link_to protein_path(protein.id), class: 'link' do%>
                <%= image_tag protein.image, class: 'bento-contents' if protein.image.attached? %>
                <div class="item-info">
                  <h3 class='item-name'><%= protein.name %><h3>
                  <div class='item-price'>
                    <span class='price'><%= protein.price %>円(税抜)</span>
                  </div>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

