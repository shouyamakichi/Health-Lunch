
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
     <%=link_to "新規会員登録", root_path, class: "new-text" %>
    </h1>
    <h3 class="new-facebook">
      <%= link_to 'Facebookで新規登録', user_facebook_omniauth_authorize_path, method: :post%>
    </h3>
    <div class='error'> 
      <%= render 'shared/error_messages', model:f.object %>
    </div>
  </div>
  <div class="form-wrapper">
    <div class="second-wrapper">
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
       <%if @sns_id.present? %>
        <%= hidden_field_tag :sns_auth, true %>
        <% else %>
        <div class="field">
          <%= f.label :password %>
          <% @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上で入力してください)</em>
          <br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :'パスワード再入力' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <% end %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お名前(全角)</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 田中" %>
          <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 太郎" %>
        </div>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">お名前カナ(全角)</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) タナカ" %>
          <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) タロウ" %>
        </div>
      </div>
      <div class='register-btn'>
        <%= f.submit "会員登録" ,class:"register-red-btn" %>
      </div>
    </div>
    </div>
  </div>
<% end %>
